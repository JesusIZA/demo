<?xml version="1.0" encoding="utf-8" ?>
<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="connection.url">jdbc:postgresql://localhost:5432/demo_db</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.username">demo_db_user</property>
        <property name="connection.password">demo_db_user</property>
        <property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <mapping class="com.example.demo.model.User"/>
        <mapping class="com.example.demo.model.Profile"/>
    </session-factory>
</hibernate-configuration>